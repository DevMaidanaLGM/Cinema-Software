<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ControlTemplate TargetType="Button" x:Key="PlantillaBotonABM">
        <Border Name="border" Height="45" Width="115" CornerRadius="30,30,30,30" Background="#FF7E0404" BorderBrush="LightGreen" BorderThickness="5">
            <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
            </TextBlock>
        </Border>
        <ControlTemplate.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Foreground" Value="#0ED119"/>
        </Trigger>
    </ControlTemplate.Triggers>
    </ControlTemplate>
    

</ResourceDictionary>